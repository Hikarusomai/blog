<h2><%= @post.title %></h2>
<p><%= @post.body %></p>
<hr>
<table>
<tr>
<td><%= link_to "Edit", edit_post_path(@post), :class => 'btn btn-secondary' %>
<td><%= button_to "Delete", post_path(@post),
	method: :delete,
	data: {confirm: 'Are you sure?'},
	:class => 'btn btn-danger' %>


<td><%= link_to 'Back', posts_path, :class => 'btn btn-primary' %>
</tr>
</table>
